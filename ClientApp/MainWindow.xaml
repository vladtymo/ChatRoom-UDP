<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Label>Message:</Label>
            <Button Click="SendBtnClick" Padding="10,5" DockPanel.Dock="Right">Send</Button>
            <Button Click="ConnectBtnClick" Padding="10,5" DockPanel.Dock="Right">Connect</Button>
            <Button Click="DisconnectBtnClick" Padding="10,5" DockPanel.Dock="Right">Disconnect</Button>
            <TextBox Name="msgTextBox" VerticalContentAlignment="Center"></TextBox>
        </DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center">Chat</TextBlock>
        <ListBox ItemsSource="{Binding}"></ListBox>
    </DockPanel>
</Window>
